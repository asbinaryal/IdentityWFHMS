
@model WFHMS.Models.ViewModel.DepartmentListViewModel

<div class="row">
    <a asp-action="Create" asp-controller="Department" class="btn btn-outline-success">
        Add New Department
    </a>
</div>
                    
@if(Model==null)
{
    <div class="row">
        <span class="alert alert-danger">
            NO RECORDS FOUND!
        </span>
    </div>
}
else {
     <div class="row">
        <table class="table">
            <thead>
                    <tr>
                    <th>Name</th>
                    <th>Id</th>
                   @*  <th>DepartmentId</th>*@
                    </tr>
                    </thead>
                    <tbody>
                @foreach (var item in Model.Department)
                {
                   <tr>
                       <td>@item.Name</td>
                       <td>@item.Id</td>
                       <td>
                           <a asp-action="Edit" asp-controller="Department" asp-route-id="@item.Id" class="btn btn-outline-success">
                               Edit
                           </a>
                              <a asp-action="Delete" asp-controller="Department"  asp-route-id="@item.Id" class="btn btn-outline-danger" >
                               Delete
                           </a>
                       </td>
                   </tr>
                }
              
            </tbody>
        </table>
    </div>
}

