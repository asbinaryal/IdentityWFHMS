@model WFHMS.Models.ViewModel.ApplyForWFHListViewModel

<div class="row">
    <a asp-action="Create" asp-controller="ApplyForWFH" class="btn btn-outline-success">
        Add New ApplyForWFH
    </a>
</div>

@if (Model == null)
{
    <div class="row">
        <span class="alert alert-danger">
            NO RECORDS FOUND!
        </span>
    </div>
}
else
{
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>FullName</th>
                    <th>From</th>
                    <th>To</th>
                    <th>LeaveTypes</th>
                    <th>Approver Name</th> 
                    <th>Reason</th>
                    <th>Department</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ApplyForWFHs)
                {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.From</td>
                        <td>@item.To</td>
                        <td>@item.LeaveType</td>
                        <td>@item.EmployeeName</td>
                        <td>@item.Reason</td>
                        <td>@item.DepartmentName</td>
                        
                        <td>
                            <a asp-action="Edit" asp-controller="ApplyForWFH" asp-route-id="@item.Id" class="btn btn-outline-success">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-controller="ApplyForWFH" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}

